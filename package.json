{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "dev": "env-cmd -e development next -p 3000",
    "build": "env-cmd -e production next build && next export",
    "start": "env-cmd -e production next start",
    "prepare": "husky install",
    "type-check": "tsc",
    "commit": "git-cz",
    "lint": "eslint src --ext ts,tsx",
    "ls-lint": "ls-lint"
  },
  "lint-staged": {
    "*.{css,scss,less}": [
      "stylelint \"src/**/*.{css,scss,less}\" --fix"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint src --ext ts,tsx --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.0",
    "clsx": "^1.1.1",
    "env-cmd": "^10.1.0",
    "material-colors-ts": "^1.0.4",
    "next": "^12.1.3",
    "next-redux-wrapper": "^7.0.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^7.2.6"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.11.0",
    "@svgr/webpack": "^6.2.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/react-redux": "^7.1.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "autoprefixer": "^10.4.4",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "editorconfig": "^0.15.3",
    "eslint": "^8.12.0",
    "eslint-config-alloy": "^4.5.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-react-hooks-addons": "^0.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "sass": "^1.49.10",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-recommended-less": "^1.0.4",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-semantic-groups": "^1.1.3",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3"
  }
}
