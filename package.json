{
  "name": "nextjs-scroll",
  "private": true,
  "scripts": {
    "dev": "PORT=5000 env-cmd -e development next",
    "build": "env-cmd -e production next build",
    "start": "env-cmd -e production next start",
    "type-check": "tsc",
    "commit": "git-cz",
    "ls-lint": "ls-lint"
  },
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged",
    "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write ./src",
      "eslint ./src --ext ts,tsx --fix",
      "git add"
    ],
    "*.{css,scss,less}": [
      "stylelint \"**/*.{css,scss,less}\" --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.0",
    "clsx": "^1.1.1",
    "env-cmd": "^10.1.0",
    "material-colors-ts": "^1.0.4",
    "next": "^12.1.0",
    "next-redux-wrapper": "^7.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "windicss": "^3.5.0"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.11.0",
    "@svgr/webpack": "^6.2.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.22",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "editorconfig": "^0.15.3",
    "eslint": "^8",
    "eslint-config-alloy": "^4.5.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.2",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "sass": "^1.49.9",
    "stylelint": "^14.5.3",
    "stylelint-config-css-modules": "^3.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.5.5",
    "windicss-webpack-plugin": "^1.6.6",
    "yorkie": "^2.0.0"
  }
}
